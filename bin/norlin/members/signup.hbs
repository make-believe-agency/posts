{{!< ../default}}

{{#if @member.paid}}
  {{!-- Logged in, paying member: Redirect home --}}
  <script>window.location = '{{@site.url}}';</script>
{{else if @member}}

  {{!-- Logged in, not paying: Check out --}}
  <div class="container">
    <div class="row">
      <div class="col col-12">
        <div class="checkout-form">
          <h1 class="checkout__title">{{t "Choose your subscription"}}</h1>
          <p class="checkout__desc">{{t "Unlock full access to"}} {{@site.title}} {{t "and see the entire library of members-only content & updates"}}</p>
          <div class="checkout-box animate">
            <div class="checkout-plan">
              <header class="checkout-plan-header">
                <h3>{{t "Monthly"}}</h3>
                <span>{{@price.currency_symbol}}</span><strong>{{@price.monthly}}</strong> / {{t "month"}}
              </header>
              <div class="checkout-plan-content">
                <ul>
                  <li>{{t "Full access to all private posts"}}</li>
                  <li>{{t "Regular updates with new content"}}</li>
                  <li>{{t "Support independent publishing"}}</li>
                  <li>{{t "Simple, secure card payment"}}</li>
                </ul>
                <a class="button button--primary" href="javascript:" data-members-plan="Monthly">{{t "Choose this plan"}}</a>
              </div>
            </div>
            <div class="checkout-plan">
              <header class="checkout-plan-header">
                <h3>{{t "Yearly"}}</h3>
                <span>{{@price.currency_symbol}}</span><strong>{{@price.yearly}}</strong> / {{t "year"}}
              </header>
              <div class="checkout-plan-content">
                <ul>
                  <li>{{t "Full access to all private posts"}}</li>
                  <li>{{t "Regular updates with new content"}}</li>
                  <li>{{t "Support independent publishing"}}</li>
                  <li>{{t "Simple, secure card payment"}}</li>
                  <li>{{t "One easy payment instead of 12!"}}</li>
                </ul>
                <a class="button button--primary" href="javascript:" data-members-plan="Yearly">{{t "Choose this plan"}}</a>
              </div>
            </div>
          </div>
        </div>
        <hr>
      </div>
    </div>
  </div>

  {{else}}

  {{!-- Not logged in: Sign up --}}
  <div class="container">
    <div class="row">
      <div class="col col-12">
        <div class="signup animate">
          <div class="signup__inner">
            <form class="signup-form" data-members-form="signup">
              <h1 class="signup__title">{{t "Signup to"}} {{@site.title}}</h1>
              <p class="signup__desc">{{t "Unlock full access and see the entire library of members-only content & updates."}}</p>
              <div class="signup__box">
                <input data-members-email type="email" placeholder="{{t "Type your email..."}}" required="true" autocomplete="false" />
                <button class="signup__button button button--primary" type="submit">
                  <span class="button-content">{{t "Continue"}}</span>
                </button>
              </div>
              <div class="message-loading">{{t "Please wait..."}}</div>
              <div class="message-success">{{t "Great! Check your inbox and click the link to confirm your subscription"}}</div>
              <div class="message-error">{{t "Please enter a valid email address!"}}</div>
              <p class="signup__bottom-text"><small>{{t "Already have an account?"}} <a href="/signin/">{{t "Sign in"}}</a></small></p>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>

{{/if}}