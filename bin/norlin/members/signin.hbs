{{!< ../default}}

<div class="container">
  <div class="row">
    <div class="col col-12">
      <div class="signin animate">
        <div class="signin__inner">
        {{#if @member}}
          {{!-- Logged in: Redirect home --}}
          <script>window.location = '{{@site.url}}';</script>
        {{else}}
          {{!-- Not logged in: Signin form --}}
          <form class="signin-form" data-members-form="signin">
            <h1 class="signin__title">{{t "Welcome back!"}}</h1>
            <p class="signin__desc">{{t "Sign into your account again for full access."}}</p>
            <div class="signin__box">
              <input data-members-email type="email" placeholder="{{t "Your email address"}}" required="true" autocomplete="false" />
              <button class="signin__button button button--primary" type="submit">
                <span class="button-content">{{t "Send login link"}}</span>
              </button>
            </div>
            <div class="message-loading">{{t "Please wait..."}}</div>
            <div class="message-success">{{t "Great! Check your inbox and click the link to complete signin"}}</div>
            <div class="message-error">{{t "Please enter a valid email address!"}}</div>
            <p class="signin__bottom-text"><small>{{t "Don't have an account yet?"}} <a href="/signup/">{{t "Sign up"}}</a></small></p>
          </form>
        {{/if}}
        </div>
      </div>
    </div>
  </div>
</div>
