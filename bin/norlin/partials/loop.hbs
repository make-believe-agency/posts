{{!-- This is the post loop - each post will be output using this markup --}}
{{#foreach posts visibility="all"}}
<div class="article col {{#is "home"}}{{#has number="1,2"}}col-6 col-t-12 grid__post animate article--big{{else}} col-4 col-d-6 col-t-12 grid__post animate{{/has}} {{else}} col-4 col-d-6 col-t-12 grid__post animate{{/is}}">
  <div class="article__inner">

    <a class="article__image" href="{{url}}">
      {{#if feature_image}}
        <img class="lazy" data-src="{{img_url feature_image}}" alt="{{title}}">
      {{/if}}
    </a>
  
    <div class="article__content">

      <div class="article__meta">
        <span class="article__minutes">
          {{reading_time}}
        </span>
        <time class="article__date" datetime="{{date format="YYYY-MM-DD"}}">{{date format="MMM DD, YYYY"}}</time>
      </div>

      <h2 class="article__title">
        <a href="{{url}}">{{title}}</a>
      </h2>

      <p class="article__excerpt">
        {{excerpt characters="142"}}
      </p>

      <div class="article__bottom">
        {{#primary_author}}
        <div class="article__author">
          <a href="{{url}}" aria-label=""><img class="article__author-image lazy" data-src="{{img_url profile_image}}" alt="{{name}}'s Picture"></a>
        </div>
        {{/primary_author}}
        
        <div class="article__bottom-meta">
          {{#primary_author}}
            <a href="{{url}}" class="article__author-link">{{name}}</a>
          {{/primary_author}}
          {{#has tag="count:>0"}}
            <span>in</span>
            <span class="article-tags">
              {{tags separator="&#xA0;"}}
            </span>
          {{/has}}
        </div>
      </div>

    </div>
  </div>
</div>
{{/foreach}}